{
  "name": "docker-koa-nextjs-graphql",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:prod": "npm run build && npx micro ./lib/index.js",
    "build": "npx babel ./src -d ./lib",
    "deploy": "npm run build && now",
    "build:dev": "npx babel ./src -d ./lib -w ./src --source-maps inline",
    "start:dev": "npx nodemon -i ./ --exec npx -n --inspect micro-dev ./lib/index.js -i ./src/ -p 3001"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          },
          "useBuiltIns": "usage"
        }
      ]
    ]
  },
  "quokka": {
    "babel": true
  },
  "author": "blatayue",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "^2.3.3",
    "apollo-server-micro": "^2.3.3",
    "axios": "^0.18.0",
    "cheerio": "^1.0.0-rc.2",
    "dataloader": "^1.4.0",
    "get-image-colors": "^2.0.0",
    "graphql": "^14.1.1",
    "graphql-tools": "^4.0.4",
    "lancaster-stemmer": "^1.0.3",
    "micro": "^9.3.3",
    "micro-cors": "^0.1.1",
    "microrouter": "^3.1.3",
    "ramda": "^0.26.1",
    "sentiment": "^5.0.1",
    "stemmer": "^1.0.3",
    "stemr": "^1.0.0",
    "winston": "^3.2.1",
    "winston-papertrail": "^1.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.5",
    "micro-dev": "^3.0.0",
    "nodemon": "^1.18.9"
  }
}
